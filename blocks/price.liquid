{% stylesheet %}
  .product-pix {
    --pix-envio-simb: #ffffff;
    --pix-envio-tsimb: 28px;
    --pix-envio-textdesc: #ffffff;
    --pix-envio-textnopix: #ffffff;
    display: inline-flex;
    align-items: center;
    gap: var(--gap-md);
    margin-top: var(--margin-md);
    padding-block: calc(var(--button-padding-block) * 0.15);
    padding-inline: var(--button-padding-inline);
    border-radius: 0;
    background: linear-gradient(90deg, #20b758 0%, #2ed182 100%);
    color: var(--pix-envio-textdesc);
    font-size: var(--font-size--xs);
    font-weight: 500;
    width: fit-content;
    box-shadow: 0 4px 12px rgb(32 183 88 / 0.25);
  }

  .product-pix svg {
    fill: var(--pix-envio-simb);
    width: var(--pix-envio-tsimb);
    height: var(--pix-envio-tsimb);
    margin-right: 7px;
  }

  .pix-value {
    line-height: 1.1;
  }

  .pix-value strong {
    color: var(--pix-envio-textdesc);
    font-weight: 700;
    text-transform: none;
  }

  .pix-value span {
    margin-left: 4px;
    color: var(--pix-envio-textnopix);
    text-transform: none;
  }

  .pix-envio {
    color: var(--pix-envio-textdesc);
    text-transform: none;
    margin-top: 2px;
  }

  .tax-note:empty {
    display: none;
  }

  form.payment-terms {
    padding-top: 0.5em;
  }

  .installments:not(:has(shopify-payment-terms)) {
    display: none;
  }
{% endstylesheet %}

