  <div class="pix-value">
    <strong>{{ primary_label }}</strong>
    {% if highlight_text != blank %}
      <span>{{ highlight_text }}</span>
    {% endif %}
    {% if note_text != blank %}
      <div class="pix-envio">{{ note_text }}</div>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .product-pix {
    display: inline-flex;
    align-items: center;
    gap: var(--gap-md);
    margin-top: var(--margin-md);
    padding-block: calc(var(--button-padding-block) * 0.15);
    padding-inline: var(--button-padding-inline);
    border-radius: 0;
    color: var(--pix-envio-textdesc);
    font-size: var(--font-size--xs);
    font-weight: 500;
    width: fit-content;
    box-shadow: 0 4px 12px rgb(32 183 88 / 0.25);
  }

  .product-pix svg {
    fill: var(--pix-envio-simb);
    width: var(--pix-envio-tsimb);
    height: var(--pix-envio-tsimb);
    margin-right: 7px;
  }

  .product-pix .pix-value {
    line-height: 1.1;
  }

  .product-pix .pix-value strong {
    color: var(--pix-envio-textdesc);
    font-weight: 700;
    text-transform: none;
  }

  .product-pix .pix-value span {
    margin-left: 4px;
    color: var(--pix-envio-textnopix);
    text-transform: none;
  }

  .product-pix .pix-envio {
    color: var(--pix-envio-note, var(--pix-envio-textdesc));
    text-transform: none;
    margin-top: 2px;
  }
{% endstylesheet %}

