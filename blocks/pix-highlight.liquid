{%- liquid
  assign block_settings = block.settings
  assign gradient_start = block_settings.background_start | default: '#20b758'
  assign gradient_end = block_settings.background_end | default: '#2ed182'
  assign icon_color = block_settings.icon_color | default: '#ffffff'
  assign text_color = block_settings.text_color | default: '#ffffff'
  assign highlight_color = block_settings.highlight_color | default: text_color
  assign note_color = block_settings.note_color | default: text_color
  assign icon_size = block_settings.icon_size | default: 28
  assign primary_label = block_settings.primary_label | default: 'Pague'
  assign highlight_text = block_settings.highlight_text | default: 'no pix'
  assign note_text = block_settings.note_text | default: 'e Tenha envio Prioritário'
-%}

<div
  class="product-pix spacing-style"
  data-block-id="{{ block.id }}"
  role="note"
  style="
    {% render 'spacing-style', settings: block_settings %}
    background: linear-gradient(90deg, {{ gradient_start }} 0%, {{ gradient_end }} 100%);
    --pix-envio-simb: {{ icon_color }};
    --pix-envio-textdesc: {{ text_color }};
    --pix-envio-textnopix: {{ highlight_color }};
    --pix-envio-note: {{ note_color }};
    --pix-envio-tsimb: {{ icon_size }}px;
  "
  {{ block.shopify_attributes }}
