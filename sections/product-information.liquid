

{% liquid
  if section.settings.desktop_media_position == 'left'
    assign render_order = 'media,product-details'
  else
    assign render_order = 'product-details,media'
  endif

  assign product_has_media = true
  if closest.product.media.size == 0
    assign product_has_media = false
  endif

  assign product_grid_class = 'product-information__grid'

  if product_has_media == false
    assign product_grid_class = product_grid_class | append: ' product-information--media-none'
  elsif section.settings.desktop_media_position == 'right'
    assign product_grid_class = product_grid_class | append: ' product-information--media-right'
  else
    assign product_grid_class = product_grid_class | append: ' product-information--media-left'
  endif

  if section.settings.equal_columns
    assign product_grid_class = product_grid_class | append: ' product-information__grid--half'

    if section.settings.limit_details_width
      assign product_grid_class = product_grid_class | append: ' product-information__grid--limit-details'
    endif
  endif

  assign product_grid_class = product_grid_class | append: ' product-information--bespoke'

  case section.settings.content_width
    when 'content-center-aligned'
      assign content_width = 'page-width'
    when 'content-full-width'
      assign content_width = 'full-width'
  endcase
%}

<script type="application/ld+json">
  {{ closest.product | structured_data }}
</script>

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="product-information section section--{{ content_width }} spacing-style color-{{ section.settings.color_scheme }} relative"
  style="{% render 'spacing-style', settings: section.settings %} --gap: {{ section.settings.gap }}px;"
>
  {% if section.settings.desktop_media_position == 'left' and product_has_media %}
    {% assign product_href = '#ProductInformation-' | append: section.id %}
    {% render 'skip-to-content-link', href: product_href, text: 'accessibility.skip_to_product_info' %}
  {% endif %}
  <div
    class="{{ product_grid_class }}"
    data-product-grid-content
  >
    {% assign render_order_array = render_order | split: ',' %}
    {% capture media %}
      <div
        class="product-information__media"
        data-testid="product-information-media"
      >
        {%- content_for 'block',
          type: '_product-media-gallery',
          id: 'media-gallery',
          closest.product: closest.product
        -%}
      </div>
    {% endcapture %}

    {% capture details %}
      {% content_for 'block',
        type: '_product-details',
        id: 'product-details',
        closest.product: closest.product
      %}
    {% endcapture %}

    {% for block in render_order_array %}
      {% if block == 'media' and product_has_media %}
        {{ media }}
      {% elsif block == 'product-details' %}
        {{ details }}
      {% endif %}
    {% endfor %}
  </div>

  {% if closest.product.description != blank %}
    <div class="product-description-below">
      <div class="product-description-below__content rte">
        {{ closest.product.description }}
      </div>
    </div>
  {% endif %}

  {% content_for 'blocks' %}
</div>

{% stylesheet %}
  .product-information {
    gap: var(--gap) 0;
  }

  /* Base grid layout */
  .product-information__grid {
    display: grid;
    grid-template-columns: subgrid;
    grid-column: 1 / -1;
  }

  .product-information__grid.product-information--bespoke {
    grid-template-columns: minmax(0, 1.4fr) minmax(320px, 1fr);
    column-gap: clamp(24px, 4vw, 56px);
    align-items: start;
  }

  .product-information__grid.product-information--bespoke .product-information__media {
    order: 0;
    width: auto;
  }

  .product-information__grid.product-information--bespoke .product-details {
    order: 1;
    width: 100%;
  }

  /* Default column positions */
  .product-details {
    order: 1;
  }

  .product-information__media {
    order: 0;
    width: 0;
    min-width: 100%;
  }

  /* Mobile styles */
  @media screen and (max-width: 749px) {
    .product-information__media {
      grid-column: 1 / -1;
    }

    .product-details {
      grid-column: 1 / -1;
    }

    .product-information__grid.product-information--bespoke {
      grid-template-columns: 1fr;
      row-gap: 32px;
    }
  }

  /* Desktop styles */
  @media screen and (min-width: 750px) {
    .product-information__grid {
      grid-column: 2;
    }

    /* Position when there is no media */
    .product-information__grid.product-information--media-none,
    .product-information__grid:has(.product-information__media:empty) {
      .product-details {
        width: var(--narrow-content-width);
        margin: 0 auto;
      }
    }

    /* Position when there is media */
    .product-information__grid:not(:has(.product-information__media:empty)) {
      /* Media on the left side */
      &.product-information--media-left {
        grid-template-columns: 1fr min(50vw, var(--sidebar-width));

        .product-information__media {
          padding-right: calc(var(--gap, 0) / 2);
        }

        .product-details {
          padding-left: calc(var(--gap, 0) / 2);
        }

        &:has(.media-gallery--extend) {
          grid-column: 1 / 3;
        }
      }

      /* Media on the right side */
      &.product-information--media-right {
        grid-template-columns: min(50vw, var(--sidebar-width)) 1fr;

        .product-information__media {
          padding-left: calc(var(--gap, 0) / 2);
          order: 1;
        }

        .product-details {
          padding-right: calc(var(--gap, 0) / 2);
          order: 0;
        }

        &:has(.media-gallery--extend) {
          grid-column: 2 / -1;
        }
      }

      /* Equal width columns */
      &.product-information__grid--half,
      &.product-information__grid--half:has(.media-gallery--extend) {
        grid-column: 1 / -1;
        grid-template-columns:
          var(--full-page-grid-margin) calc(var(--full-page-grid-central-column-width) / 2) calc(
            var(--full-page-grid-central-column-width) / 2
          )
          var(--full-page-grid-margin);

        &.product-information--media-left {
          .product-information__media {
            grid-column: 2 / 3;

            &:has(.media-gallery--extend) {
              grid-column: 1 / 3;
            }
          }

          .product-details {
            grid-column: 3 / 4;
          }
        }

        &.product-information--media-right {
          .product-information__media {
            grid-column: 3 / 4;

            &:has(.media-gallery--extend) {
              grid-column: 3 / -1;
            }
          }

          .product-details {
            grid-column: 2 / 3;
          }
        }
      }
    }

    /* Handle full width section */
    .section--full-width {
      .product-information__grid:not(:has(.product-information__media:empty)),
      .product-information__grid:not(:has(.product-information__media:empty)) {
        &.product-information--media-left,
        &.product-information--media-right {
          grid-column: 1 / -1;
        }

        &.product-information--media-left .product-details {
          padding-inline-end: var(--padding-lg);
        }

        &.product-information--media-right .product-details {
          padding-inline-start: var(--padding-lg);
        }

        &.product-information__grid--half.product-information--media-left {
          .product-information__media {
            grid-column: 1 / 3;
          }

          .product-details {
            grid-column: 3 / -1;
          }
        }

        &.product-information__grid--half.product-information--media-right {
          .product-information__media {
            grid-column: 3 / -1;
          }

          .product-details {
            grid-column: 1 / 3;
          }
        }
      }
    }
  }

  .product-description-below {
    margin-top: clamp(32px, 5vw, 72px);
  }

  .product-description-below__content {
    max-width: min(100%, 920px);
    margin-inline: auto;
    color: var(--color-foreground);
  }

  .product-description-below__content > *:first-child {
    margin-top: 0;
  }

  .product-description-below__content > *:last-child {
    margin-bottom: 0;
  }

  .product-information .variant-option__button-label--has-swatch .swatch {
    width: 28px;
    height: 28px;
    border-radius: 6px;
    border: 1px solid var(--color-variant-border);
    display: block;
  }

  .product-information .variant-option--swatches {
    gap: var(--gap-sm);
  }

  body.template-product .product-information__grid.product-information--bespoke {
    gap: clamp(28px, 4vw, 56px);
  }

  body.template-product .product-information__grid.product-information--bespoke .product-information__media,
  body.template-product .product-information__grid.product-information--bespoke .product-details > .group-block {
    background: rgba(248, 244, 237, 0.7);
    border-radius: 24px;
    padding: clamp(20px, 2.3vw, 36px);
  }

  body.template-product .product-information__grid.product-information--bespoke .product-details > .group-block {
    display: flex;
    flex-direction: column;
    gap: clamp(16px, 2vw, 24px);
    background: #ffffff;
    box-shadow: 0 24px 64px rgba(24, 21, 17, 0.08);
  }

  body.template-product .product-information__grid.product-information--bespoke .group-block-content {
    gap: clamp(16px, 2vw, 24px);
  }

  body.template-product .product-information__grid.product-information--bespoke .product-information__media {
    background: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  body.template-product .product-information__grid.product-information--bespoke .product-information__media media-gallery {
    width: 100%;
  }

  body.template-product .product-information__grid.product-information--bespoke .product-information__media slideshow-component {
    border-radius: 20px;
    overflow: hidden;
  }

  body.template-product .product-information__grid.product-information--bespoke .product-information__media .product-media__image {
    border-radius: 20px;
    object-fit: cover;
  }

  @media screen and (min-width: 990px) {
    body.template-product .product-information__grid.product-information--bespoke {
      grid-template-columns: minmax(0, 62%) minmax(320px, 1fr);
    }

    body.template-product .product-information__grid.product-information--bespoke .product-information__media {
      padding: clamp(24px, 2.8vw, 40px);
    }

    body.template-product .product-information__grid.product-information--bespoke .product-information__media media-gallery {
      display: grid;
      grid-template-columns: minmax(88px, 120px) 1fr;
      gap: clamp(16px, 2vw, 28px);
      align-items: start;
    }

    body.template-product .product-information__grid.product-information--bespoke .product-information__media slideshow-component {
      grid-column: 2;
    }

    body.template-product .product-information__grid.product-information--bespoke .product-information__media slideshow-controls[thumbnails] {
      grid-column: 1;
      grid-row: 1;
      align-self: stretch;
      display: flex;
      flex-direction: column;
    }

    body.template-product .product-information__grid.product-information--bespoke .product-information__media slideshow-controls[thumbnails] scroll-hint {
      height: 100%;
    }

    body.template-product .product-information__grid.product-information--bespoke .product-information__media .slideshow-controls__thumbnails-container {
      flex: 1 1 auto;
    }

    body.template-product .product-information__grid.product-information--bespoke .product-information__media .slideshow-controls__thumbnails {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    body.template-product .product-information__grid.product-information--bespoke .product-information__media .slideshow-controls__thumbnail {
      border-radius: 16px;
      border: 1px solid rgba(110, 92, 74, 0.25);
      overflow: hidden;
      padding: 0;
      transition: border-color 150ms ease, transform 150ms ease;
    }

    body.template-product .product-information__grid.product-information--bespoke .product-information__media .slideshow-controls__thumbnail[aria-selected='true'],
    body.template-product .product-information__grid.product-information--bespoke .product-information__media .slideshow-controls__thumbnail:focus-visible,
    body.template-product .product-information__grid.product-information--bespoke .product-information__media .slideshow-controls__thumbnail:hover {
      border-color: rgba(87, 70, 52, 0.6);
      transform: translateX(4px);
    }

    body.template-product .product-information__grid.product-information--bespoke .product-information__media slideshow-component::part(controls) {
      display: none;
    }
  }

  @media screen and (max-width: 989px) {
    body.template-product .product-information__grid.product-information--bespoke .product-information__media,
    body.template-product .product-information__grid.product-information--bespoke .product-details > .group-block {
      padding: clamp(16px, 5vw, 28px);
    }

    body.template-product .product-information__grid.product-information--bespoke .product-information__media .slideshow-controls__thumbnails {
      gap: 8px;
    }
  }

  body.template-product .product-information__grid.product-information--bespoke .product-details .product-information__block--text :is(h1, h2, h3, h4, h5, h6) {
    font-family: var(--font-heading--family);
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    margin: 0;
    color: #352720;
  }

  body.template-product .product-information__grid.product-information--bespoke .product-details .product-information__block--text p {
    margin: 0;
    color: rgba(53, 39, 32, 0.75);
    line-height: 1.6;
  }

  body.template-product .product-information__grid.product-information--bespoke .product-details product-price {
    font-size: clamp(1.5rem, 2.8vw, 2rem);
    font-weight: 600;
    color: #2f241d;
  }

  body.template-product .product-information__grid.product-information--bespoke .variant-option--buttons {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(96px, 1fr));
    gap: 12px;
  }

  body.template-product .product-information__grid.product-information--bespoke .variant-option__button-label {
    position: relative;
    border-radius: 999px;
    border: 1px solid rgba(110, 92, 74, 0.25);
    background: #ffffff;
    padding: 12px 18px;
    font-weight: 600;
    letter-spacing: 0.01em;
    color: rgba(53, 39, 32, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    text-transform: uppercase;
    transition: border-color 150ms ease, color 150ms ease, background-color 150ms ease, box-shadow 150ms ease;
  }

  body.template-product .product-information__grid.product-information--bespoke .variant-option__button-label input {
    position: absolute;
    inset: 0;
    opacity: 0;
  }

  body.template-product .product-information__grid.product-information--bespoke .variant-option__button-label:has(input:checked) {
    background: rgba(110, 92, 74, 0.1);
    border-color: rgba(110, 92, 74, 0.5);
    box-shadow: 0 8px 20px rgba(24, 21, 17, 0.08);
    color: #2f241d;
  }

  body.template-product .product-information__grid.product-information--bespoke .variant-option__button-label:hover {
    border-color: rgba(110, 92, 74, 0.45);
  }

  body.template-product .product-information__grid.product-information--bespoke .variant-picker__form {
    gap: clamp(16px, 2vw, 28px);
  }

  body.template-product .product-information__grid.product-information--bespoke .product-details .button-primary {
    background-color: #2f8f5b;
    border: none;
    border-radius: 999px;
    padding-block: 16px;
    font-size: 1rem;
    letter-spacing: 0.05em;
  }

  body.template-product .product-information__grid.product-information--bespoke .product-details .shopify-payment-button__button {
    border-radius: 999px;
  }

  /* Wider sidebar for large screens */
  @media screen and (min-width: 1200px) {
    .product-information__grid:not(
        .product-information__grid--half,
        :has(.product-information__media:empty)
      ).product-information--media-left {
      grid-template-columns: 2fr 1fr;
    }

    .product-information__grid:not(
        .product-information__grid--half,
        :has(.product-information__media:empty)
      ).product-information--media-right {
      grid-template-columns: 1fr 2fr;
    }
  }

  .product-information__grid--limit-details .product-details > .group-block {
    max-width: var(--sidebar-width);
  }

  /* If the header is sticky, make product details content stick underneath the header */
  body:has(#header-group #header-component[data-sticky-state='active']) .product-details.sticky-content--desktop {
    --sticky-header-offset: var(--header-height);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:names.product_information",
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:content.layout"
    },
    {
      "type": "select",
      "id": "content_width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "content-center-aligned",
          "label": "t:options.page"
        },
        {
          "value": "content-full-width",
          "label": "t:options.full"
        }
      ],
      "default": "content-center-aligned"
    },
    {
      "type": "select",
      "id": "desktop_media_position",
      "label": "t:settings.media_position",
      "options": [
        {
          "value": "left",
          "label": "t:options.left"
        },
        {
          "value": "right",
          "label": "t:options.right"
        }
      ],
      "default": "left"
    },
    {
      "type": "checkbox",
      "id": "equal_columns",
      "label": "t:settings.equal_columns",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "limit_details_width",
      "label": "t:settings.limit_product_details_width",
      "default": false,
      "visible_if": "{{ section.settings.equal_columns }}"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:settings.gap",
      "min": 0,
      "max": 48,
      "step": 4,
      "unit": "px",
      "default": 16
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": []
}
{% endschema %}
